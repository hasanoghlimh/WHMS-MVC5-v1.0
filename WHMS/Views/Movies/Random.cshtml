@using WHMS.Models
@model WHMS.ViewModels.RandomMovieViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    var className = Model.Customers.Count > 0 ? "popular" : null;
}
<h2 class="@className">
    HI
    @*@Model.Customers*@
    @*@(((Movie) ViewData["RandomMovie"]).Name)*@
    @*@ViewBag.Movie.Name*@


</h2>

@if (Model.Customers.Count == 0)
{
    <text>
        No one Here
    </text>
}
else
{

    <ul>
        @foreach (var customer in Model.Customers)
        {
            <li>
                @customer.Name
            </li>
        }
    </ul>


}
